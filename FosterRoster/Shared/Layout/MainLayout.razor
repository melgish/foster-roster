@inherits LayoutComponentBase
@* This is required by radzen to make the theme sticky *@
@* ReSharper disable once UnusedMember.Local *@
@inject CookieThemeService CookieThemeService
<RadzenComponents/>
<RadzenRow>
    <RadzenColumn OffsetXX="3" SizeXX="6" OffsetXL="2" SizeXL="8" OffsetLG="1" SizeLG="10" SizeMD="12"
                  SizeSM="12">
        <RadzenLayout>
            <RadzenHeader Style="min-height: unset">
                <AppNavMenu/>
            </RadzenHeader>
            <RadzenBody>
                @Body
            </RadzenBody>
            <RadzenFooter class="rz-py-0 rz-background-secondary-light">
                <RadzenStack
                    AlignItems="AlignItems.Center"
                    JustifyContent="JustifyContent.SpaceBetween"
                    Orientation="Orientation.Horizontal">
                    <Verison/>
                </RadzenStack>
            </RadzenFooter>
        </RadzenLayout>
        <div id="blazor-error-ui">
            An unhandled error has occurred.
            <a href=""
               class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </div>
    </RadzenColumn>
</RadzenRow>
