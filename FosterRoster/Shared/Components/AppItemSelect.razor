@typeparam TValue
@inherits AppFormComponent<TValue>

<RadzenStack Gap="0rem">
    <RadzenFormField
        AllowFloatingLabel="false"
        Component="@Name"
        Text="@Text"
        Variant="Variant.Text">
        <RadzenDropDown Data="Items"
                        Disabled="@Disabled"
                        Name="@Name"
                        Placeholder="@Placeholder"
                        TextProperty="@nameof(ListItemDto<TValue>.Name)"
                        TValue="TValue"
                        Value="@Value"
                        ValueChanged="ValueChanged"
                        ValueExpression="ValueExpression"
                        ValueProperty="@nameof(ListItemDto<TValue>.Id)"/>
    </RadzenFormField>
    <ValidationMessage For="ValueExpression" TValue="TValue"/>
</RadzenStack>

@code {
    [Parameter] public IEnumerable<ListItemDto<TValue>>? Items { get; set; }
}