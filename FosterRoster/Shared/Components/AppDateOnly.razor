@inherits AppFormComponent<DateOnly?>

<RadzenStack Gap="0rem">
    <RadzenFormField
        AllowFloatingLabel="false"
        Helper="Helper"
        Component="@Name"
        Text="@Text"
        Variant="Variant.Text">
        <RadzenDatePicker AllowClear="@AllowClear"
                          Disabled="Disabled"
                          Name="@Name"
                          Placeholder="mm/dd/yyyy"
                          Value="@Value"
                          ValueChanged="ValueChanged"
                          ValueExpression="ValueExpression"
        />
    </RadzenFormField>
    <ValidationMessage For="ValueExpression"/>
</RadzenStack>

@code {
    /// <summary>
    ///     Gets or sets value indication if value can be cleared.
    /// </summary>
    [Parameter]
    public bool AllowClear { get; set; }
}