@inherits AppFormComponent<TValue>
@typeparam TValue

<RadzenStack Gap="0rem">
    <RadzenFormField
        AllowFloatingLabel="false"
        Component="@Name"
        Helper="Helper"
        Text="@Text"
        Variant="Variant.Text">
        <RadzenDropDown
            Data="Data"
            Disabled="Disabled"
            Name="@Name"
            Placeholder="@Placeholder"
            TValue="TValue"
            Value="Value"
            ValueChanged="ValueChanged"
            ValueExpression="ValueExpression"
        />
    </RadzenFormField>
    <ValidationMessage TValue="TValue" For="ValueExpression"/>
</RadzenStack>

@code {
    [Parameter] public IEnumerable<TValue> Data { get; set; } = null!;
}