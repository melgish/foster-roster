<RadzenDataGrid
    TItem="Fosterer"
    Data="@Items"
    Density="Density.Compact">
    <HeaderTemplate>
        <AppGridHeader Text="Fosterers">
            <AppGridButton Text="Add" Click="@(() => OnAdd.InvokeAsync())"/>
        </AppGridHeader>
    </HeaderTemplate>
    <Columns>
        <RadzenDataGridColumn Width="6ch">
            <Template Context="data">
                <AppGridButton
                    ButtonStyle="ButtonStyle.Secondary"
                    Click="@(() => OnEdit.InvokeAsync(data.Id))"
                    Text="Edit"/>
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn Property="@nameof(Fosterer.Name)" Title="@nameof(Fosterer.Name)"/>
        <RadzenDataGridColumn Property="@nameof(Fosterer.Email)" Title="@nameof(Fosterer.Email)"/>
        <RadzenDataGridColumn Property="@nameof(Fosterer.Phone)" Title="@nameof(Fosterer.Phone)" Width="13ch"/>
    </Columns>
</RadzenDataGrid>

@code {
    [Parameter] public ICollection<Fosterer> Items { get; set; } = [];
    [Parameter] public EventCallback OnAdd { get; set; } = EventCallback.Empty;
    [Parameter] public EventCallback<int> OnEdit { get; set; } = EventCallback<int>.Empty;
}