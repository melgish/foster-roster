<RadzenDataGrid
    TItem="Source"
    Data="@Items"
    Density="Density.Compact"
>
    <HeaderTemplate>
        <AppGridHeader Text="Sources">
            <AppGridButton Click="@(() => OnAdd.InvokeAsync())" Text="Add"/>
        </AppGridHeader>
    </HeaderTemplate>
    <Columns>
        <RadzenDataGridColumn Width="6ch">
            <Template Context="data">
                <AppGridButton Click="@(() => OnEdit.InvokeAsync(data.Id))" Text="Edit"/>
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn Property="@nameof(Fosterer.Name)" Title="@nameof(Fosterer.Name)"/>
    </Columns>
</RadzenDataGrid>

@code {
    [Parameter] public ICollection<Source> Items { get; set; } = [];
    [Parameter] public EventCallback OnAdd { get; set; } = EventCallback.Empty;
    [Parameter] public EventCallback<int> OnEdit { get; set; } = EventCallback<int>.Empty;
}