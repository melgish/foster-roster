<RadzenFormField AllowFloatingLabel="false" Text="Units" Variant="Variant.Text">
    <RadzenDropDown TValue="Enum" Value="@Value" Data="@Choices"
                    ValueChanged="@UpdateAsync"/>
</RadzenFormField>

@code {
    // Choices for the dropdown. Need to be enum to use display value.
    private static readonly Enum[] Choices =
    [
        WeightUnit.g,
        WeightUnit.oz,
        WeightUnit.lbs,
        WeightUnit.kg
    ];
    
    private async Task UpdateAsync(Enum newValue) => await ValueChanged.InvokeAsync((WeightUnit)newValue);

    [Parameter] public WeightUnit Value { get; set; } = WeightUnit.lbs;
    
    [Parameter] public EventCallback<WeightUnit> ValueChanged { get; set; }
}