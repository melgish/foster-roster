@inherits LayoutComponentBase

<RadzenRow>
    <RadzenColumn OffsetXX="4" SizeXX="4" OffsetXL="3" SizeXL="6" OffsetLG="2" SizeLG="8" OffsetMD="1" SizeMD="10"
                  SizeSM="12">
        <RadzenLayout>
            <RadzenHeader Style="min-height: unset">
                <AppNavMenu/>
            </RadzenHeader>
            <RadzenBody>
                @Body
            </RadzenBody>
            <RadzenFooter class="rz-py-0 rz-background-secondary-light">
                <Verison/>
            </RadzenFooter>
        </RadzenLayout>
        <RadzenComponents @rendermode="InteractiveWebAssembly"/>
        <div id="blazor-error-ui">
            An unhandled error has occurred.
            <a href=""
               class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </div>
    </RadzenColumn>
</RadzenRow>
