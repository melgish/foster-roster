<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Confirm Delete</MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">
            If you click Yes, you will delete all data about @Model.Name.
            Any cats linked to @Model.Name will not be deleted. Instead
            the Fosterer link will be cleared.
            <em>This action cannot be undone.</em>
            <br /><br />
            NOTE: @Model.Name will not be harmed.
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default"
                   OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error"
                   OnClick="Confirm">Yes</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public FostererEditModel Model { get; set; } = null!;

    void Cancel()
    {
        MudDialog.Cancel();
    }

    void Confirm()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
}